<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/product/<%= data[0].product_id%>?_method=PUT" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>

                <div class="form-group">
                  <label>名稱</label>
                  <input type="text" name="product_name" class="form-control" placeholder="請輸入產品名稱" value="<%= data[0].product_name%>">
                </div>

                <div class="row">
                  <div class="form-group col-md-6">
                    <label>售價</label>
                    <input type="text" name="product_price" class="form-control" placeholder="請輸入產品價格" value="<%= data[0].product_price%>">
                  </div>
                  <div class="form-group col-md-6">
                    <label>庫存</label>
                    <input type="text" name="product_stock" class="form-control" placeholder="請輸入產品庫存" value="<%= data[0].product_stock%>">
                  </div>
                </div>

                <div class="form-group">
                  <label>類別</label>
                  <div>
                    <select class="form-control minimal" name="category_id">
                      
                      <% if (category.length) { %>
                        <% for (var i=0; i< category.length; i++) { %>
                        <option value="<%= category[i].category_id%>"><%= category[i].category_name%></option>
                        <% } %>
                        <% } %>

                    </select>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-6">
                    <label>圖片</label>
                    <div style="position:relative;">
                      <input type="file" name="image_path" id="real-file" class="hidden" multiple/>
                      <button type="button" id="custom-button" class="btn btn-danger">上傳圖片</button>
                      <span id="custom-text">圖檔尚未選擇</span>
                    </div>
                  </div>

                  <div class="form-group col-md-6">
                    <label>評分</label>
                    <div style="height: 30px;">
                      <div class="rating">
                        
                        <% for (var i=1; i <=5; i++) { %>
                          <label>
                            <% if (data[0].product_rating === i) { %>
                              <input type="radio" name="product_rating" value="<%= i%>" checked/>
                            <% } else { %>
                              <input type="radio" name="product_rating" value="<%= i%>" />
                            <% } %>
                            <% var j=0;%>
                            <% while (j < i) { %>
                            <span class="icon">★</span>
                            <% j++; %>
                            <% } %>
                          </label>
                        <% } %>
                        
                      </div>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>簡介</label>
                  <textarea class="form-control" name="product_description" placeholder="產品介紹" rows="6" style="resize:none;"><%= data[0].product_description%></textarea>
                </div>

                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>