<!DOCTYPE html>
<html lang="en">

<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/category" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="form-group">
                  <label>名稱</label>

                  <% if (validation.length > 0) { %>
                  <% if (validation.find(element => element.param == "category_name")) { %>
                  <div class="has-error">
                    <input type="text" name="category_name" class="form-control" placeholder="email@hofonspring.com"
                      value="<%= category_info.category_name %>">
                    <span
                      class="error text-danger validation"><%= validation[(validation.findIndex(element => element.param == "category_name"))].msg; %></span>
                  </div>
                  <% } else { %>
                  <input type="text" name="category_name" class="form-control" placeholder="email@hofonspring.com"
                    value="<%= category_info.category_name %>">
                  <% } %>
                  <% } else { %>
                  <input type="text" name="category_name" class="form-control">
                  <% } %>

                </div>
                <hr>
                <label style="font-size: 20px; margin-bottom: 10px;">選擇公司</label>
                <div class="row">
                  <div class="col-md-12">
                    <input class="form-control" id="tableSearch" type="text" placeholder="搜索公司">
                  </div>
                </div>
                <br>
                <table class="table table-striped table-hover">
                  <tbody id="myTable">

                    <% if (data.length) { %>
                    <% for (var i=0; i< data.length; i++) { %>
                    <tr>
                      <td><input type="checkbox" name="company_id" id="<%= data[i].company_id %>"
                          value="<%= data[i].company_id %>">
                        <label for="<%= data[i].company_id %>"><%= data[i].company_name %></label></td>
                    </tr>
                    <% } %>
                    <% } %>

                  </tbody>
                </table>

                <% if (validation.length > 0) { %>
                <% if (validation.find(element => element.param == "company_id")) { %>
                <div class="has-error" style="padding-bottom: 10px;">
                  <span
                    class="error text-danger validation"><%= validation[(validation.findIndex(element => element.param == "company_id"))].msg; %></span>
                </div>
                <% } %>
                <% } %>

                <br>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>