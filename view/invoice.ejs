<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
    <section id="main">
        <div class="container">
            <div class="row">
                <%- include('partial/sidemenu')-%>
                <div class="col-md-9">
                    <%- include('partial/flash')-%>
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title"><%= title%></h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <input class="form-control" id="tableSearch" type="text" placeholder="Search">
                                </div>
                            </div>
                            <br>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>單號</th>
                                        <th>產品總數</th>
                                        <th>總額</th>
                                        <th>訂單日期</th>
                                        <th class="col-md-1 col-sm-1">狀態</th>
                                        <th class="col-md-1 col-sm-1"></th>
                                    </tr>
                                    <tr>
                                </thead>
                                <tbody id="myTable">

                                    <% if (data.length) { %>
                                    <% for (var i=0; i< data.length; i++) { %>
                                    <tr>
                                        <td><%= i + 1; %></td>
                                        <td><%= data[i].merchant_trade_number, %></td>
                                        <td><%= data[i].order_total_item %></td>
                                        <td><%= data[i].order_final_price %></td>
                                        <td><%= data[i].created_date %></td>
                                        <% if (data[i].order_status === 1 ) { %>
                                        <td>
                                            <div class="btn btn-complete">交易已完成</div>
                                        </td>
                                        <% } else if (data[i].order_status === 2 ) { %>
                                        <td>
                                            <div class="btn btn-cancel">交易已報廢</div>
                                        </td>
                                        <% } else if (data[i].order_status === 3 ) { %>
                                        <td>
                                            <div class="btn btn-other">含其他事項</div>
                                        </td>
                                        <% } %>
                                        <td><a href="/api/invoice/<%= data[i].order_id %>" class="btn btn-danger">瀏覽</a>
                                        </td>
                                    </tr>
                                    <% } %>
                                    <% } %>

                                </tbody>
                            </table>
                            <%- include('partial/pagination')-%>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <%- include('partial/footer')-%>

</body>

</html>