<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/admin" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>賬號</label>
                    <input type="text" name="admin_email" class="form-control" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" name="admin_name" class="form-control" placeholder="">
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>密碼</label>
                    <input type="password" name="admin_password" id="password" class="form-control" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label>請再次輸入密碼</label><span id='message' style="padding-left: 20px;"></span>
                    <input type="password" id="confirmed_password" class="form-control" placeholder="">
                  </div>
                </div>
                <hr>
                <input type="submit" class="btn btn-danger" value="新增">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>