<!DOCTYPE html>
<html lang="en">

<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/client" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>賬號</label>
                    <input type="text" name="name" class="form-control" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" class="form-control" placeholder="">
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>密碼</label>
                    <input type="password" id="password" class="form-control" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label>請再次輸入密碼</label><span id='message' style="padding-left: 20px;"></span>
                    <input type="password" id="confirmed_password" class="form-control" placeholder="">
                  </div>
                </div>
                
                <% if (locals.role === 1) { %>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>所屬公司</label>
                    <div>
                      <select class="form-control minimal">
                        <option value="1">公司 1</option>
                        <option value="2">公司 2</option>
                        <option value="3">公司 3</option>
                        <option value="4">公司 4</option>
                        <option value="5">公司 5</option>
                      </select>
                    </div>
                  </div>
                </div>
                <% } %>

                <hr>
                <label style="font-size: 20px; padding-bottom: 10px;">權限管理</label>
                <table class="table table-striped table-hover">
                  <tbody id="myTable">
                    <td><input type="checkbox" id="box-0" disabled checked>
                      <label for="box-0">縱覽報告 (默認權限)</label></td>
                    <td>Dec 12</td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-1">
                        <label for="box-1">公司資料管理</label></td>
                      <td>Dec 13</td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-2">
                        <label for="box-2">管理者以及消費者管理</label></td>
                      <td>Dec 14</td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-3">
                        <label for="box-3">產品管理</label></td>
                      <td>Dec 15</td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-4">
                        <label for="box-4">促銷活動管理</label></td>
                      <td>Dec 13</td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-5">
                        <label for="box-5">產品類別管理</label></td>
                      <td>Dec 14</td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-6">
                        <label for="box-6">產品榮譽項目管理</label></td>
                      <td>Dec 15</td>
                    </tr>
                  </tbody>
                </table>
                <br>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>