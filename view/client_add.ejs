<!DOCTYPE html>
<html lang="en">

<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/client" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>帳號</label>
                    <input type="text" name="admin_email" class="form-control" placeholder="email@hofonspring.com">
                  </div>
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" name="admin_name" class="form-control" placeholder="">
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>密碼</label>
                    <input type="password" name="admin_password" id="password" class="form-control" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label>請再次輸入密碼</label><span id='message' style="padding-left: 20px;"></span>
                    <input type="password" id="confirmed_password" class="form-control" placeholder="">
                  </div>
                </div>

                <% if (locals.role === 1) { %>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>所屬公司</label>
                    <div>
                      <select class="form-control minimal" name="company_id">

                        <% if (data.length) { %>
                        <% for (var i=1; i< data.length; i++) { %>
                        <option value="<%= data[i].company_id%>"><%= data[i].company_name%></option>
                        <% } %>
                        <% } %>

                      </select>
                    </div>
                  </div>
                </div>
                <% } %>

                <hr>
                <label style="font-size: 20px;">權限管理</label>

                <% if (validation.length > 0) { %>
                <% if (validation.find(element => element.param == "privileges_id")) { %>
                <div class="has-error" style="padding-bottom: 10px;">
                  <span
                    class="error text-danger"><%= validation[(validation.findIndex(element => element.param == "privileges_id"))].msg; %></span>
                </div>
                <% } %>
                <% } %>

                <table class="table table-striped table-hover">
                  <tbody id="myTable">

                    <% if (privileges.length) { %>
                    <% for (var i=0; i< privileges.length; i++) { %>
                    <tr>
                      <td class="col-md-4">
                        <input type="checkbox" name="privileges_id" id="<%= privileges[i].privileges_id%>"
                          value="<%= privileges[i].privileges_id%>">
                        <label for="<%= privileges[i].privileges_id%>"><%= privileges[i].privileges_name%></label></td>
                      <td class="col-md-8"><%= privileges[i].privileges_description%></td>
                    </tr>
                    <% } %>
                    <% } %>

                  </tbody>
                </table>
                <br>
                <input type="submit" class="btn btn-danger" value="新增">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>