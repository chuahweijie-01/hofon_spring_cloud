<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/company/client/<%= data[0].company_id%>?_method=PUT" method='POST'>
                <label style="font-size: 20px;">負責人資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>姓名</label>
                    <input type="text" class="form-control" value="<%= data[0].company_contact_name%>" disabled>
                  </div>
                  <div class="form-group col-md-6">
                    <label>職銜</label>
                    <input type="text" class="form-control" value="<%= data[0].company_contact_position%>" disabled>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>聯絡號碼</label>
                    <input type="text" class="form-control" value="<%= data[0].company_contact_phone%>" disabled>
                  </div>
                  <div class="form-group col-md-6">
                    <label>分機</label>
                    <input type="text" class="form-control" value="<%= data[0].company_contact_fax%>" disabled>
                  </div>
                </div>
                <hr>
                <label style="font-size: 20px;">公司資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" class="form-control" value="<%= data[0].company_name%>" disabled>
                  </div>
                  <div class="form-group col-md-6">
                    <label>商標</label>
                    <div style="position:relative;">
                      <button type="button" id="custom-button" class="btn btn-danger" disabled>上傳商標</button>
                      <span id="custom-text">圖檔尚未選擇</span>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>統編 六碼</label>
                    <input type="text" class="form-control" value="<%= data[0].company_official_id%>" disabled>
                  </div>
                  <div class="form-group col-md-6">
                    <label>聯絡號碼</label>
                    <input type="text" class="form-control" value="<%= data[0].company_phone%>" disabled>
                  </div>
                </div>
                <div class="form-group">
                  <label>簡介 <a style="color:#e74c3c"><span class="glyphicon glyphicon-question-sign"
                        data-toggle="tooltip" data-placement="right" data-original-title="寫入一些資料"></span></a>
                  </label>

                  <% if (validation.length > 0) { %>
                  <% if (validation.find(element => element.param == "company_description")) { %>
                  <div class="has-error">
                    <textarea name="company_description" class="form-control" rows="6"
                      style="resize:none;"><%= company_info.company_description%></textarea>
                    <span
                      class="error text-danger validation"><%= validation[(validation.findIndex(element => element.param == "company_description"))].msg; %></span>
                  </div>
                  <% } else { %>
                  <textarea name="company_description" class="form-control" rows="6"
                    style="resize:none;"><%= company_info.company_description%></textarea>
                  <% } %>
                  <% } else { %>
                  <textarea name="company_description" class="form-control" rows="6"
                    style="resize:none;"><%= data[0].company_description%></textarea>
                  <% } %>

                </div>
                <div class="form-group">
                  <label>登記地址</label>
                  <input type="text" class="form-control" value="<%= data[0].company_address%>" disabled>
                </div>
                <div class="form-group">
                  <label>通訊地址</label>
                  <input type="text" class="form-control" value="<%= data[0].company_address_another%>" disabled>
                </div>
                <hr>
                <label style="font-size: 20px;">銀行戶口</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>帳號</label>
                    <input type="text" class="form-control" value="<%= data[0].company_bank_account%>" disabled>
                  </div>
                  <div class="form-group col-md-6">
                    <label>戶名</label>
                    <input type="text" class="form-control" value="<%= data[0].company_bank_account_holder%>" disabled>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-4">
                    <label>銀行</label>
                    <input type="text" class="form-control" value="<%= data[0].company_bank_name%>" disabled>
                  </div>
                  <div class="form-group col-md-2">
                    <label>代號 三碼</label>
                    <input type="text" class="form-control" value="<%= data[0].company_bank_name_code%>" disabled>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-4">
                    <label>分行</label>
                    <input type="text" class="form-control" value="<%= data[0].company_bank_branch%>" disabled>
                  </div>
                  <div class="form-group col-md-2">
                    <label>代號 四碼</label>
                    <input type="text" class="form-control" value="<%= data[0].company_bank_branch_code%>" disabled>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-6">
                    <label>存摺封面影本</label>
                    <div style="position:relative;">
                      <button type="button" id="custom-button2" class="btn btn-danger" disabled>上傳影本</button>
                      <span id="custom-text2">圖檔尚未選擇</span>
                    </div>
                  </div>
                </div>
                <hr>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

  <script>
    $(function () {
      user_role = "<%= locals.role%>"
      if ("<%= locals.role%>" == 0) {
        $(".role_determine").prop("disabled", true)
      }
    })
  </script>

</body>

</html>