<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>
<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/discount" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" name="name" class="form-control" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label>促銷百分比（%）</label>
                    <input type="text" class="form-control" placeholder="">
                  </div>
                </div>
                <hr>
                <label style="font-size: 20px; margin-bottom: 10px;">選擇產品</label>
                <div class="row">
                  <div class="col-md-12">
                    <input class="form-control" id="tableSearch" type="text" placeholder="Search">
                  </div>
                </div>
                <br>
                <table class="table table-striped table-hover">
                  <tbody id="myTable">
                    <tr>
                      <td><input type="checkbox" id="box-0">
                        <label for="box-0">產品_1</label></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-1">
                        <label for="box-1">產品_2</label></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-2">
                        <label for="box-2">產品_3</label></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-3">
                        <label for="box-3">產品_4</label></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-4">
                        <label for="box-4">產品_5</label></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-5">
                        <label for="box-5">產品_6</label></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="box-6">
                        <label for="box-6">產品_7</label></td>
                    </tr>
                  </tbody>
                </table>
                <br>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>