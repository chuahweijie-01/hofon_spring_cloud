                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/pickr.min.js"></script>
    <script src="js/color_picker.js" id="color_picker" data-header_color="<%= data[0].header_color%>"
        data-body_color="<%= data[0].body_color%>" data-footer_color="<%= data[0].footer_color%>"
        data-button_1_color="<%= data[0].button_1_color%>"></script>

    <%- include('partial/footer')-%>

</body>

</html>