<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/admin/<%= value[0].admin_id%>?_method=PUT" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>賬號</label>
                    <input type="text" name="admin_email" class="form-control" value="<%= value[0].admin_email%>">
                  </div>
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" name="admin_name" class="form-control" value="<%= value[0].admin_name%>">
                  </div>
                </div>
                <hr>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>