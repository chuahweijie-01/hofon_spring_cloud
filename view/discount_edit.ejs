<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/discount/<%= data[0].discount_id%>?_method=PUT" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>名稱</label>
                    <input type="text" name="discount_name" class="form-control" placeholder="" value="<%= data[0].discount_name%>">
                  </div>
                  <div class="form-group col-md-6">
                    <label>促銷百分比（%）</label>
                    <input type="text" name="discount_percent" class="form-control" placeholder="" value="<%= data[0].discount_percent%>">
                  </div>
                </div>
                <hr>
                <label style="font-size: 20px; margin-bottom: 10px;">選擇產品</label>
                <div class="row">
                  <div class="col-md-12">
                    <input class="form-control" id="tableSearch" type="text" placeholder="Search">
                  </div>
                </div>
                <br>
                <table class="table table-striped table-hover">
                  <tbody id="myTable">

                    <% if (product.length) { %>
                    <% var checked = 0; %>
                    <% for (var i =0; i< product.length; i++) { %>
                    <% for (var j=0; j< data.length; j++) { %>
                    <% if (product[i].discount_id === data[j].discount_id ) { %>
                    <% checked = 1; %>
                    <% break; %>
                    <% } %>
                    <% } %>

                    <tr>
                      <td>
                        <% if (checked == 1) { %>
                        <input type="checkbox" name="product_id" id="<%= product[i].product_id%>" value="<%= product[i].product_id%>" checked>
                        <label for="<%= product[i].product_id%>"><%= product[i].product_name%></label>
                        <% } else if (product[i].discount_id != null){ %>
                        <input type="checkbox" disabled>
                        <label for="<%= product[i].product_id%>">已歸納在 <%= product[i].discount_name%> : <%= product[i].product_name%></label>
                        <% } else { %>
                        <input type="checkbox" name="product_id" id="<%= product[i].product_id%>" value="<%= product[i].product_id%>">
                        <label for="<%= product[i].product_id%>"><%= product[i].product_name%></label>
                        <% } %>
                      </td>
                    </tr>

                    <% checked = 0; %>
                    <% } %>
                    <% } %>

                  </tbody>
                </table>
                <br>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>