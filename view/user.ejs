<!DOCTYPE html>
<html lang="en">

<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div id="status_message"></div>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-12">
                  <input class="form-control" id="tableSearch" type="text" placeholder="Search">
                </div>
              </div>
              <br>
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th></th>
                    <th>名稱</th>
                    <th>性別</th>
                    <% if (locals.role === 1) { %>
                    <th>所屬公司</th>
                    <th>創建日期</th>
                    <% } else {%>
                    <th>電郵</th>
                    <th>最後一次登入</th>
                    <% } %>
                    <th class="col-md-1 col-lg-1 col-sm-1">狀態</th>
                  </tr>
                  <tr>
                </thead>
                <tbody id="myTable">
                  <% if (data.length) { %>
                  <% for (var i=0; i< data.length; i++) { %>
                  <tr>
                    <td><%= i + 1; %></td>
                    <td><%= data[i].user_name %></td>
                    <td><%= data[i].user_gender %></td>
                    <% if (locals.role === 1) { %>
                    <td><%= data[i].company_name %></td>
                    <td><%= data[i].created_date %></td>
                    <% } else {%>
                    <td><%= data[i].user_email %></td>
                    <td><%= data[i].last_login %></td>
                    <% } %>
                    <% if (data[i].user_status === 1 ) { %>
                    <td><a class="btn btn-success user_activation" id="user_activation_<%= data[i].user_id%>"
                        data-button_id="<%= data[i].user_id%>" data-user_id="<%= data[i].user_id%>">激活中</a></td>
                    <% } else { %>
                    <td><a class="btn btn-primary user_activation" id="user_activation_<%= data[i].user_id%>"
                        data-button_id="<%= data[i].user_id%>" data-user_id="<%= data[i].user_id%>">凍結中</a></td>
                    <% } %>
                  </tr>
                  <% } %>
                  <% } %>
                </tbody>
              </table>
              <%- include('partial/pagination')-%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>