<!DOCTYPE html>
<html lang="en">

<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <form action="/api/client/<%= data[0].admin_id%>?_method=PUT" method='POST'>
                <label style="font-size: 20px;"><%= title%>資料</label>
                <div class="row">
                  <div class="form-group col-md-6">
                    <label>帳號</label>

                    <% if (validation.length > 0) { %>
                    <% if (validation.find(element => element.param == "admin_email")) { %>
                    <div class="has-error">
                      <input type="text" name="admin_email" class="form-control" placeholder="email@hofonspring.com"
                        value="<%= client_info.admin_email %>">
                      <span
                        class="error text-danger validation"><%= validation[(validation.findIndex(element => element.param == "admin_email"))].msg; %></span>
                    </div>
                    <% } else { %>
                    <input type="text" name="admin_email" class="form-control" placeholder="email@hofonspring.com"
                      value="<%= client_info.admin_email %>">
                    <% } %>
                    <% } else { %>
                    <input type="text" name="admin_email" class="form-control" placeholder="email@hofonspring.com"
                      value="<%= data[0].admin_email%>">
                    <% } %>

                  </div>
                  <div class="form-group col-md-6">
                    <label>名稱</label>

                    <% if (validation.length > 0) { %>
                    <% if (validation.find(element => element.param == "admin_name")) { %>
                    <div class="has-error">
                      <input type="text" name="admin_name" class="form-control" value="<%= client_info.admin_name %>">
                      <span
                        class="error text-danger validation"><%= validation[(validation.findIndex(element => element.param == "admin_name"))].msg; %></span>
                    </div>
                    <% } else { %>
                    <input type="text" name="admin_name" class="form-control" value="<%= client_info.admin_name %>">
                    <% } %>
                    <% } else { %>
                    <input type="text" name="admin_name" class="form-control" value="<%= data[0].admin_name%>">
                    <% } %>

                  </div>
                </div>
                <hr>
                <label style="font-size: 20px; padding-bottom: 10px;">權限管理</label>
                <table class="table table-striped table-hover">
                  <tbody id="myTable">

                    <% if (privileges.length) { %>
                    <% var checked = 0; %>
                    <% for (var i=0; i< privileges.length; i++) { %>
                    <% for (var j=0; j< data.length; j++) { %>
                    <% if (privileges[i].privileges_id === data[j].privileges_id ) { %>
                    <% checked = 1; %>
                    <% break; %>
                    <% } %>
                    <% } %>

                    <tr>
                      <td class="col-md-4">
                        <% if (checked == 1) { %>
                        <input type="checkbox" name="privileges_id" id="<%= privileges[i].privileges_id%>"
                          value="<%= privileges[i].privileges_id%>" checked>
                        <% } else { %>
                        <input type="checkbox" name="privileges_id" id="<%= privileges[i].privileges_id%>"
                          value="<%= privileges[i].privileges_id%>">
                        <% } %>
                        <label for="<%= privileges[i].privileges_id%>"><%= privileges[i].privileges_name%></label></td>
                      <td class="col-md-8"><%= privileges[i].privileges_description%></td>
                    </tr>

                    <% checked = 0; %>
                    <% } %>
                    <% } %>

                  </tbody>
                </table>

                <% if (validation.length > 0) { %>
                <% if (validation.find(element => element.param == "privileges_id")) { %>
                <div class="has-error" style="padding-bottom: 10px;">
                  <span
                    class="error text-danger validation"><%= validation[(validation.findIndex(element => element.param == "privileges_id"))].msg; %></span>
                </div>
                <% } %>
                <% } %>

                <br>
                <input type="submit" class="btn btn-danger" value="更新">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>