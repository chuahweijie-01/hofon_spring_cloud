<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Area | Account Login</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">禾豐雲商城系統管理者平臺</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">

        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1>管理者平臺</h1>
            <small>賬號登入</small>
          </div>
        </div>
      </div>
    </header>

    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <form id="login" action="/auth" class="well" method='POST'>
                  <div class="form-group">
                    <label>電郵</label>
                    <input name="username" type="text" class="form-control" placeholder="請輸入電郵">
                  </div>
                  <div class="form-group">
                    <label>密碼</label>
                    <input name="password" type="password" class="form-control" placeholder="請輸入密碼">
                  </div>
                  <button type="submit" class="btn btn-default btn-block">登入</button>
              </form>
          </div>
        </div>
      </div>
    </section>

    <% if (message.length > 0) { %>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="alert alert-danger">
                        <strong><%= message%></strong>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <%- include('partial/footer')-%>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  </body>
</html>
