<!DOCTYPE html>
<html lang="en">
<%- include('partial/header')-%>

<body>
  <section id="main">
    <div class="container">
      <div class="row">
        <%- include('partial/sidemenu')-%>
        <div class="col-md-9">
          <%- include('partial/flash')-%>
          <a class="btn btn-danger" href="/api/company/new" style="margin-bottom: 10px;">新增<%= title%></a>
          <div class="panel panel-default">
            <div class="panel-heading main-color-bg">
              <h3 class="panel-title"><%= title%></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-12">
                  <input class="form-control" id="tableSearch" type="text" placeholder="Search">
                </div>
              </div>
              <br>
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>代號</th>
                    <th>名稱</th>
                    <th>加入日期</th>
                    <th></th>
                  </tr>
                  
                </thead>
                <tbody id="myTable">

                  <% if (data.length) { %>
                    <% for (var i=0; i< data.length; i++) { %>
                      <tr>
                        <td><%= data[i].company_id %></td>
                        <td><%= data[i].company_name %></td>
                        <td><%= data[i].created_date %></td>
                        <td><a class="btn btn-default" href="/api/company/<%= data[i].company_id%>">Edit</a> <a class="btn btn-danger" href="/api/company/<%= data[i].company_id%>?_method=DELETE">Delete</a></td>
                      </tr>
                    <% } %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%- include('partial/footer')-%>

</body>

</html>